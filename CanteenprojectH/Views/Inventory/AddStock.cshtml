@model CanteenprojectH.Models.Inventory 

@{
    ViewData["Title"] = "Add Stock";
}

<h2>Add Stock</h2>

<form asp-action="AddStock" method="post">
    <div class="form-group">
        <label asp-for="ProductId">Product</label>
        <select asp-for="ProductId" class="form-control">
            <option value="">Select a Product</option>
            @foreach (var product in ViewBag.Products as List<CanteenprojectH.Models.Product>)
            {
                <option value="@product.ProductId">@product.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StockIn">Stock In</label>
        <input asp-for="StockIn" class="form-control" />
        <span asp-validation-for="StockIn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StockOut">Stock Out</label>
        <input asp-for="StockOut" class="form-control" />
        <span asp-validation-for="StockOut" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StockDate">Stock Date</label>
        <input asp-for="StockDate" class="form-control" type="date" />
        <span asp-validation-for="StockDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Stock</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
